package controler {	import flash.events.Event;	import flash.display.Sprite;		import model.Model;	import view.View;		public class Controler	{		private var _model:Model;		private var _view:View;		public var currentIndex:int;		public var currentTitle:String;		public var currentUrl:String;						public function Controler(m:Model, v:View) 		{			_model = m;			_view = v;			_model.addEventListener(Model.MODEL_CHANGED, update);		}				private function update(e:Event):void		{ 			this.currentUrl = _model.currentUrl;			this.currentIndex = _model.currentIndex;			this.currentTitle = _model.currentTitle;			_view.numText(currentIndex);			_view.titleText(currentTitle);			_view.picture(currentUrl);			_view.index = currentIndex;		}	}	}